<div class='container'>
<h1>MY TASKS</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
  <%= (task.completed ? '✅' : '❌') %>
  <%= link_to task.title, task_path(task) %>
   <%= link_to task_path(task), method: :delete, data: { confirm: "Do you want to delete #{task.title}" } do %>
      <%= '🚮' %>
    <% end %>
  </li>
<% end %>
</ul>
<button class='btn'>
<%= link_to "Create a new task", new_task_path  %>
</button>
</div>
