
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "Task done?" %>
<% end %>

<p><%= link_to "Back to list of Tasks", tasks_path  %></p>
